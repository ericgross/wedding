                        <h1>Thanks!</h1>
                        <div class="column_full">
                          We will be in touch.
                        </div>
                      <% else %>
                        <h1>Tell us about yourself.</h1>
                        <div class="column_full">
                          <%= simple_form_for @person do |f| %>
                            <%= f.input :first_name, :value => @person.first_name %>
                            <%= f.input :last_name, :value => @person.last_name %>
                            <%= f.input :email, :value => @person.email %>
                            <%= f.input :address_line_1, :value => @person.address_line_1 %>
                            <%= f.input :address_line_2, :value => @person.address_line_2 %>
                            <%= f.input :address_city, :value => @person.address_city %>
                            <%= f.input :address_state, :value => @person.address_state, :collection => us_states %>
                            <%= f.input :address_zip, :value => @person.address_zip %>
                            <%= f.input :phone_number, :value => @person.phone_number %>
  
                            <%= f.button :submit, 'Submit Information' %>
                          <% end %>
                        <% end %>
