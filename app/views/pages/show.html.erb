                <div class="main wrapper clearfix">

                    <header>
                        <div id="introtext">
                            <span class="head-sarah">Sarah</span>
                            <span class="head-brad">&nbsp;
                                <span class="amp">&amp;</span> 
                                ERIC
                            </span>
                            <div class="date">AUGUST 31<sup>st</sup>, 2014</div>

                        </div>
                    </header>

                    <div class="clearfix"></div>

                    <section id="savethedate" class="clearfix">
                      <h1>Save the Weekend</h1>
                      <div class="column_full">
